<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="openmultimedia.reporter">

<metal:styleslot fill-slot="style_slot" >

        <link rel="stylesheet" type="text/css" media="screen" href=""
              tal:attributes="href string:${context/absolute_url}/++resource++openmultimedia.reporter/styles.css" />

</metal:styleslot>

<metal:javascriptslot fill-slot="javascript_head_slot" >

        <script type="text/javascript" src="++resource++openmultimedia.reporter/javascript.js">
        </script>

</metal:javascriptslot>

<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
      <div class="soy-reporter-list-view">
        <div class="ireport-banner">
            <img src="++resource++openmultimedia.reporter/soy_reportero.jpg" />
        </div>

        <div class="reports-list">
            <table class="listing">
                <thead>
                    <tr>
                        <th class="nosort">&nbsp;<tal:title i18n:translate=""
                          >Title</tal:title>&nbsp;</th>
                        <th class="nosort">&nbsp;<tal:title i18n:translate=""
                          >Name</tal:title>&nbsp;</th>
                        <th class="nosort">&nbsp;<tal:title i18n:translate=""
                          >Country</tal:title>&nbsp;</th>
                        <th class="nosort">&nbsp;<tal:title i18n:translate=""
                          >Date</tal:title>&nbsp;</th>
                        <th class="nosort">&nbsp;<tal:title i18n:translate=""
                          >State</tal:title>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                        
                    <tal:reports repeat="brain view/publics">
                        <tr tal:define="report brain/getObject;
                                        oddrow repeat/brain/odd;
                                        state report/get_status"
                            tal:attributes="class python:'report-item-list '+ 'even' if oddrow else 'odd'">
                            <td class="report-item-list-title">
                                <a href="#" tal:attributes="href report/absolute_url;
                                class python:'view-report state-'+state"
                                            tal:content="report/Title"/>
                            </td>
                            <td class="report-item-list-name">
                                <span tal:content="report/name"/>
                            </td>
                            <td class="report-item-list-country">
                                <span tal:content="report/country"/>
                            </td>
                            <td class="report-item-list-date">
                                <span tal:content="report/date"/>
                            </td>
                            <td tal:content="state"></td>
                        </tr>
                    </tal:reports>
                    </tbody>
            </table>
            <div class="arrows-list">
              <span id="report-arrow-left-list"
                    tal:attributes="class python:view.actual != 0 and 'show'">
                <a tal:attributes="href python:context.absolute_url() + '/listado-report' + '?action=prev&amp;actual='+ str(view.actual)" 
                   id="report-arrow-prev-link"></a>
              </span>
              <span id="report-arrow-right-list"
                    tal:attributes="class python:view.actual != view.total and 'show'">
                <a tal:attributes="href python:context.absolute_url() + '/listado-report' + '?action=next&amp;actual='+str(view.actual)" 
                   id="report-arrow-next-link"></a>
              </span>
              <div style="clear:both"></div>
            </div>
        </div>
        </div>
    </tal:main-macro>
</metal:main>

</body>
</html>
